@model appCoreMVC_13.Models.Cliente


@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4"><i class="bi bi-person-plus"></i> Crear Cliente</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th colspan="2" class="text-center">Datos del Cliente</th>
                        </tr>
                    </thead>
                    <form asp-action="Create" class="border border-dark p-4 rounded">
                        <tr>
                            <td><i class="bi bi-card-text"></i> ID Cliente</td>
                            <td>
                                <input asp-for="idcliente" class="form-control" />
                                <span asp-validation-for="idcliente" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><i class="bi bi-building"></i> Nombre de la Compañía</td>
                            <td>
                                <input asp-for="nombrecia" class="form-control" />
                                <span asp-validation-for="nombrecia" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><i class="bi bi-house-door"></i> Dirección</td>
                            <td>
                                <input asp-for="direccion" class="form-control" />
                                <span asp-validation-for="direccion" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><i class="bi bi-globe"></i> País</td>
                            <td>
                                <select asp-for="idpais" asp-items="@ViewBag.paises" class="form-select"></select>
                            </td>
                        </tr>
                        <tr>
                            <td><i class="bi bi-telephone"></i> Teléfono</td>
                            <td>
                                <input asp-for="telefono" class="form-control" />
                                <span asp-validation-for="telefono" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-center">
                                <a asp-action="Create" class="btn btn-primary">NUEVO</a>
                                <input type="submit" value="Agregar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-primary">RETORNAR</a>
                            </td>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="text-center mb-4" style="background-color:darkcyan">
    @ViewBag.mensaje
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}