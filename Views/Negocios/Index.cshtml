@model IEnumerable<appCoreMVC_13.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Clientes</h1>

<p class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Cliente</a>
</p>

<div class="table-responsive">
    <table class="table table-dark table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre de la Compañía</th>
                <th>Dirección</th>
                <th>País</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.idcliente</td>
                    <td>@item.nombrecia</td>
                    <td>@item.direccion</td>
                    <td>@item.idpais</td>
                    <td>@item.telefono</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Actualizar" asp-route-id="@item.idcliente" class="btn btn-primary">Editar</a>
                            <form asp-action="Eliminar" method="post" class="d-inline-block" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este cliente?');">
                                <input type="hidden" name="id" value="@item.idcliente" />
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
